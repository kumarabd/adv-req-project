<!-- Make the arrow blink by alternating between dark and bright arrow image -->
<animation-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_arrow"
    android:oneshot="false">
    <item android:drawable="@drawable/arrow_green_dark" android:duration="500"/>
    <item android:drawable="@drawable/arrow_green_light" android:duration="500"/>
</animation-list>
